<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/background_last"
            android:paddingLeft="20dp"
            android:paddingTop="20dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/back4" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:letterSpacing="0.02"
                android:text="Jakarta"
                android:textColor="#fff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:letterSpacing="0.02"
                android:text="Tokyo"
                android:textColor="#fff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="75dp"
                android:text="Thursday, 21 Oct 2021"
                android:textColor="#fff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:text="Sort by: "
                android:textColor="#fff"
                android:textSize="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="135dp"
                app:cardBackgroundColor="#0FAC9D"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:letterSpacing="0.04"
                    android:text="Time"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_marginTop="172dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:background="#C8F8F3"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="182dp"
                        android:layout_height="33dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:letterSpacing="0.04"
                            android:text="FLIGHT"
                            android:textSize="17dp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:text="CRUISE"
                        android:textSize="17dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp">
        
        <RelativeLayout
            android:layout_width="385dp"
            android:layout_height="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-25dp"
                app:cardBackgroundColor="#46884C"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:letterSpacing="0.02"
                    android:text="$1140"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="300dp"
                android:src="@drawable/garuda_indonesia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Oct"
                android:textSize="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Oct"
                android:textSize="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="315dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="97dp"
                android:text="JKT"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TKY"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginTop="97dp"
                android:textColor="@color/black"
                android:layout_marginLeft="315dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Indonesia)"
                android:textSize="12dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="125dp"
                android:text="(Japan)"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:src="@drawable/travel_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:letterSpacing="0.04"
                android:text="5h 30m" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:letterSpacing="0.04"
            android:text="13:00"
            android:layout_marginLeft="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:letterSpacing="0.04"
                android:text="18:30"
                android:layout_marginLeft="310dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="385dp"
            android:layout_height="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-25dp"
                app:cardBackgroundColor="#46884C"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$960"
                    android:layout_gravity="center"
                    android:textSize="23dp"
                    android:letterSpacing="0.04"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="300dp"
                android:src="@drawable/citylink2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Oct"
                android:textSize="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Oct"
                android:textSize="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="315dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JKT"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginTop="97dp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TKY"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginTop="97dp"
                android:textColor="@color/black"
                android:layout_marginLeft="315dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Indonesia)"
                android:textSize="12dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="125dp"
                android:text="(Japan)"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:src="@drawable/travel_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:letterSpacing="0.04"
                android:text="6h 50m"
                android:layout_marginLeft="165dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:letterSpacing="0.04"
                android:text="02:00"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:letterSpacing="0.04"
                android:text="08:50"
                android:layout_marginLeft="310dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_time"
        android:text="NEXT"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:background="#C8F8F3"
        android:layout_marginLeft="240dp"/>

</LinearLayout>